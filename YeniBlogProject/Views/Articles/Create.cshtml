@model YeniBlogProject.Models.Article

@{
    ViewData["Title"] = "Create";
}
@{
    Layout = "_LayoutLogin";
}
<link href="~/css/Articlepage.css" rel="stylesheet" />

<h4>Article</h4>
<hr />
<div class="row">
    <div class="col-md-5">
        <img style="width:400px; height:400px; margin-top:50px;" src="~/images/article.png" /><br />
    </div>
    <div class="col-md-4">
        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Please Select TopicName</label><hr />
                @await Component.InvokeAsync("SelectTopics")
            </div>
            <div class="form-group">
                <label asp-for="Tittle" class="control-label"></label>
                <input asp-for="Tittle" class="form-control" />
                <span asp-validation-for="Tittle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea id="summernote" asp-for="Content" class="form-control" style="height:150px;"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NumberOfClick" class="control-label"></label>
                <input readonly asp-for="NumberOfClick" class="form-control" />
                <span asp-validation-for="NumberOfClick" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="User.Mail" class="control-label"></label>
                <input class="form-control" placeholder="@TempData["UserMail"]" value="@TempData["UserMail"]" readonly />
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />

            </div>

        </form>
    </div>

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@if (ViewBag.Message != null)
{
    <script type="text/javascript">

        window.onload = function () {
          alert("@ViewBag.Message");

        };

    </script>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


